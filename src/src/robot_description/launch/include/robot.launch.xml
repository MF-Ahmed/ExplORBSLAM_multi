<!-- Spawns the robot with a RGBD camera -->

<launch>

    <arg name="robot_name"/>
    <arg name="init_pose"/>
    <arg name="agent_number"/>

    <group ns="$(arg robot_name)">
        <param name="tf_prefix" value="$(arg robot_name)" />

        <rosparam command="load" file="$(find joint_state_controller)/joint_state_controller.yaml" />
        <node name="joint_state_controller_spawner_$(arg robot_name)" pkg="controller_manager" type="spawner" output="screen" args="joint_state_controller">
        </node>

        <param name="robot_description" command="$(find xacro)/xacro '$(find robot_description)/urdf/rosbot.xacro'"/>

        <!-- Spawn robot -->
        <node pkg="gazebo_ros" type="spawn_model" name="spawn_$(arg robot_name)"
              args="$(arg init_pose) -unpause -urdf -param robot_description -model robot_$(arg agent_number) -robot_namespace $(arg robot_name)" respawn="false">
              <remap from="/tf2" to="tf2"/>
        </node>

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

        <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

    </group>

</launch>
